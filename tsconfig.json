{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["admin-panel/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "admin-panel/src/**/*",
    "admin-panel/vite.config.ts",
    "api/backend/src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "api/functions",
    "**/api/functions/**",
    "dist",
    "build"
  ]
}

